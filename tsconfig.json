{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@configs/*": ["./src/lib/configs/*"],
      "@consts/*": ["./src/app/consts/*"],
      "@services/*": ["./src/lib/services/*"],
      "@utils/*": ["./src/lib/utils/*"],
      "@hooks/*": ["./src/lib/hooks/*"],
      "@components/*": ["./src/ui/components/*"],
      "@types/*": ["./src/lib/types/*"],
      "@interfaces/*": ["./src/lib/interfaces/*"],
      "@layouts/*": ["./src/ui/layouts/*"],
      "@styles/*": ["./src/ui/styles/*"],
      "@views/*": ["./src/ui/views/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/ui/components/shadcn/Toaster"
  ],
  "exclude": ["node_modules"]
}
